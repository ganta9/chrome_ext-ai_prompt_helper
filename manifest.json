{
  "manifest_version": 3,
  "name": "AI Prompt Helper",
  "version": "6.0.0",
  "description": "AIサイト用プロンプト管理ツール",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.github.io/*",
    "*://script.google.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://bard.google.com/*",
        "*://copilot.microsoft.com/*",
        "*://www.microsoft.com/copilot*",
        "*://felo.ai/*",
        "*://www.perplexity.ai/*",
        "*://notebooklm.google.com/*",
        "*://notebooklm.google/*",
        "*://grok.com/*",
        "*://x.ai/*",
        "*://www.genspark.ai/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_area": {
      "width": 640,
      "height": 800
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  }
}